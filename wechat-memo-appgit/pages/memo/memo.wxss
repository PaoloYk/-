/* wechat-memo-app/pages/memo/memo.wxss */
.container {
  padding: 20px;
}

input {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
}

button {
  margin: 5px;
}

.count {
  text-align: right;
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.memo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}

.content-time {
  flex: 1;
}

.content {
  margin-bottom: 5px;
}

.time {
  font-size: 12px;
  color: #999;
}